{
  "manifest_version": 3,
  "name": "Fluento Language Assistant",
  "description": "AI-powered language learning Chrome extension",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Fluento"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "public/icons/icon.svg",
    "32": "public/icons/icon.svg",
    "48": "public/icons/icon.svg",
    "128": "public/icons/icon.svg"
  }
} 